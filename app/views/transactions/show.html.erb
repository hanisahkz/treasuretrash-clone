<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default"> 
  

      <div class="panel-heading post_image text-center">
        <h2>Transaction Show Page</h2>

        <% @transaction.posting.avatars.each do |x| %>
          <%= image_tag (x.medium.url) %>
        <%end%>
      </div>

      <div class="panel-body">
      <p>
        <strong>Title:</strong>
        <%= @transaction.posting.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @transaction.posting.description %>
      </p>

      <p>
        <strong>Condition:</strong>
        <%= @transaction.posting.condition %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @transaction.posting.category %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= @transaction.posting.full_address %>
      </p>

      <p>
      	<strong>Giver's details</strong>
        <br>
      	Name: <%= @transaction.posting.user.first_name + @transaction.posting.user.last_name %>
        <br>
      	Email: <%= @transaction.posting.user.email %>
        <br>
      	Phone:<%= @transaction.posting.user.phone_no %>
      </p>
      </div>

    
  </div>
</div>